<%- include("header") -%>
    <div class="box" id="heading">
      <h1><%= title %> List</h1>
    </div>
    <div class="box">
      <% for(let i = 0; i< addedToDos.length; i++){ %>
      <div class="item">
        <input type="checkbox" />
        <p><%= addedToDos[i] %></p>
      </div>
      <% }; %>

      <form class="item" action="/" method="post">
        <input
          type="text"
          name="newItem"
          placeholder="Add New Item"
          autocomplete="off"
        />
        <button value=<%=title%> type="submit" name="list">+</button>
      </form>
      <div id="link"><a  href=<%=type === "work" ? "/" : "/work"%> ><%=type === "work" ? "Daily" : "Work"%> List</a></div>
      
    </div>
<%- include("footer") -%>